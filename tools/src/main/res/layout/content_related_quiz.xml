<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="${relativePackage}.${activityClass}">

    <data>

        <variable
            name="items"
            type="androidx.databinding.ObservableArrayList" />
    </data>


    <merge>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/_10sdp">

            <include
                android:id="@+id/layout_recycler"
                layout="@layout/content_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                auto:items="@{items}" />

            <LinearLayout
                android:id="@+id/layout_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <com.github.nikartm.button.FitButton
                    android:id="@+id/button_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minHeight="@dimen/_50sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    auto:fb_backgroundColor="@color/material_grey200"
                    auto:fb_cornerRadius="@dimen/_2sdp"
                    auto:fb_text="@string/view"
                    auto:fb_textColor="@color/material_grey800"
                    auto:fb_textSize="@dimen/_14ssp"
                    tools:visibility="visible" />

                <com.github.nikartm.button.FitButton
                    android:id="@+id/button_next"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minHeight="@dimen/_50sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    auto:fb_backgroundColor="@color/material_grey200"
                    auto:fb_cornerRadius="@dimen/_2sdp"
                    auto:fb_text="@string/next"
                    auto:fb_textColor="@color/material_grey800"
                    auto:fb_textSize="@dimen/_14ssp"
                    tools:visibility="visible" />
            </LinearLayout>
        </RelativeLayout>

    </merge>

</layout>