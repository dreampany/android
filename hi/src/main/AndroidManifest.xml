<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dreampany.hi"
    android:installLocation="auto">

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Android">

        <!-- splash -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden|screenLayout"
            android:theme="@style/Theme.Android.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.auth.AuthActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden|screenLayout|smallestScreenSize"

            android:theme="@style/Theme.Android.NoActionBar" />

        <activity
            android:name=".ui.auth.LoginActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden|screenLayout|smallestScreenSize"
            android:theme="@style/Theme.Android.NoActionBar" />

        <activity
            android:name=".ui.auth.RegisterActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden|screenLayout|smallestScreenSize"
            android:theme="@style/Theme.Android.NoActionBar" />

        <activity
            android:name=".ui.MainActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden|screenLayout|smallestScreenSize">

        </activity>

    </application>

</manifest>