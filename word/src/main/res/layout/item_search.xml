<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.LaunchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="164dp"
            android:layout_height="164dp"
            android:alpha="0.2"
            android:scaleType="fitCenter"
            auto:srcCompat="@drawable/ic_search_accent_24dp" />


        <fr.arnaudguyon.smartfontslib.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/search_words_hint"
            android:textColor="@color/material_grey600"
            android:textSize="16sp"
            android:visibility="visible"
            auto:smart_font="@string/fontRobotoSlabBody"
            tools:visibility="visible" />

    </LinearLayout>

</layout>