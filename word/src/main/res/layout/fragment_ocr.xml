<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="${relativePackage}.${activityClass}">

    <data>

        <variable
            name="items"
            type="android.databinding.ObservableArrayList" />
    </data>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/layout_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.beardedhen.androidbootstrap.BootstrapProgressBar
                    android:id="@+id/progress"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:visibility="gone"
                    auto:animated="true"
                    auto:bootstrapBrand="danger"
                    auto:bootstrapMaxProgress="100"
                    auto:bootstrapProgress="100"
                    auto:bootstrapSize="sm"
                    auto:striped="true"
                    tools:visibility="visible" />

                <include
                    android:id="@+id/layout_top_status"
                    layout="@layout/content_top_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <cz.kinst.jakub.view.StatefulLayout
                android:id="@+id/stateful"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/layout_top">

                <include
                    android:id="@+id/layout_recycler"
                    layout="@layout/content_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    auto:items="@{items}" />

            </cz.kinst.jakub.view.StatefulLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/fab_margin"
                auto:elevation="6dp"
                auto:rippleColor="@color/white"
                auto:srcCompat="@drawable/ic_filter_center_focus_white_24dp" />

        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</layout>